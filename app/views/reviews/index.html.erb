<h1>Reviews</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.rating %></td>
        <td><%= review.restaurant.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to restaurant', restaurants_path(@restaurant), class: "btn btn-info" %>
