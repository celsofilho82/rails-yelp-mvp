<h1>Restaurant info</h1>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p><%= link_to 'See restaurant reviews', restaurant_reviews_path(@restaurant), class: "btn btn-info" %></p>
<%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
<%= link_to 'Back', restaurants_path(@restaurant), class: "btn btn-secundary" %>
